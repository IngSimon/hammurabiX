# MAKEFILE for mac
# Healpix compiled by modifying config.osx file by hand
# with g++-7 -m64

# EXTERNAL LIBRARIES
GSL = /usr/local/Cellar/gsl/2.3
FFTW = /usr/local/Cellar/fftw/3.3.6-pl2
CFITSIO = /usr/local/Cellar/cfitsio/3.390
HEALPIX = /Users/jiaxin/lab/Healpix_3.31/src/cxx/osx

# EXECUTABLE NAME
EXE = hamx

# COMPILER
CXX = g++-7 -std=c++11

# DEBUG FLAGS
DEBUG = -g #-NDEBUG

# COMPILE OPTIONS
CXXFLAGS = -O0 -Wall -Wextra -fPIC -Wno-deprecated $(DEBUG) -fopenmp -pthread

EXT_INC = -I$(CFITSIO)/include -I$(GSL)/include -I$(FFTW)/include \
	-I$(HEALPIX)/include \
	-I include -I.
CXXFLAGS += $(EXT_INC)
 
ALL_L = -L$(CFITSIO)/lib -L$(GSL)/lib -L$(FFTW)/lib \
	-L$(HEALPIX)/lib \
	-L lib -L. 
LFLAGS = $(ALL_L) \
	-lhammurabi \
	-lhealpix_cxx -lcxxsupport -lc_utils -lfftpack -lcfitsio \
	-lgsl -lgslcblas -lm -lfftw3 -fopenmp

# DEPENDENCIES
OBJ = $(addprefix src/, tinyxml2.o class_grid.o class_pond.o namespace_toolkit.o class_fe.o class_fernd.o class_breg.o class_brnd.o class_cre.o class_int.o)

HEADS = $(addprefix include/, cgs_units_file.h class*.h namespace_toolkit.h tinyxml2.h) 



# RULES

default: $(EXE)

src/hammurabi.o: src/hammurabi.cc $(OBJ)

$(EXE): $(OBJ) src/hammurabi.o lib/libhammurabi.a
	rm -rf bin; mkdir bin
	$(CXX) $^ -o bin/$(EXE) $(LFLAGS)
	cp data/* bin

%.o: %.cc $(HEADS)
	$(CXX) -c $< -o $@ $(CXXFLAGS)

lib/libhammurabi.a: $(OBJ) src/hammurabi.o
	ar cr $@ $^

help:
	echo $(OBJ)

.PHONY: clean
clean:
	rm lib/*.a src/*.o; rm -rf bin
.PHONY: tar 
tar:
	tar cfv HamX.tar.gz makefile* include src
# END
