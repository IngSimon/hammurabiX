# MAKEFILE for mac
# Healpix compiled by modifying config.osx file by hand
# with g++-7 -m64

# EXTERNAL LIBRARIES
GSL = /usr/local/Cellar/gsl/2.3
FFTW = /usr/local/Cellar/fftw/3.3.6-pl2
CFITSIO = /usr/local/Cellar/cfitsio/3.390
HEALPIX = /Users/jiaxin/lab/Healpix_3.31/src/cxx/osx

# EXECUTABLE NAME
EXE = hamx

# COMPILER
CXX = g++-7 -std=c++11

# DEBUG FLAGS
DEBUG = -g #-NDEBUG

# COMPILE OPTIONS
CXXFLAGS = -O3 -Wall -Wextra -fPIC -Wno-deprecated $(DEBUG) -fopenmp -pthread

EXT_INC = -I$(CFITSIO)/include -I$(GSL)/include -I$(FFTW)/include \
	-I$(HEALPIX)/include \
	-I include -I.
CXXFLAGS += $(EXT_INC)
 
ALL_L = -L$(CFITSIO)/lib -L$(GSL)/lib -L$(FFTW)/lib \
	-L$(HEALPIX)/lib \
	-L lib -L. 
LFLAGS = $(ALL_L) \
	-lhammurabi \
	-lhealpix_cxx -lcxxsupport -lc_utils -lfftpack -lcfitsio \
	-lgsl -lgslcblas -lm -lfftw3 -fopenmp

# DEPENDENCIES
OBJ = $(addprefix src/, pond.o)
OBJ += $(addprefix src/grids/, grid.o grid_breg.o grid_brnd.o grid_cre.o grid_fe.o grid_fernd.o grid_int.o)
OBJ += $(addprefix src/fields/cre/, cre.o cre_ana.o cre_num.o)
OBJ += $(addprefix src/fields/fe/, fe.o fe_ymw16.o fernd.o fernd_iso.o)
OBJ += $(addprefix src/fields/gmf/, breg.o brnd.o brnd_anig.o brnd_anil.o brnd_iso.o breg_wmap.o)
OBJ += $(addprefix src/tools/, namespace_toolkit.o tinyxml2.o)
OBJ += $(addprefix src/integrators/, integrator.o)

HEADS = $(addprefix include/, *.h) 



# RULES

default: $(EXE)

src/hammurabi.o: src/hammurabi.cc $(OBJ)

$(EXE): $(OBJ) src/hammurabi.o lib/libhammurabi.a
	rm -rf bin; mkdir bin
	$(CXX) $^ -o bin/$(EXE) $(LFLAGS)
	cp data/* bin

%.o: %.cc $(HEADS)
	$(CXX) -c $< -o $@ $(CXXFLAGS)


lib/libhammurabi.a: $(OBJ) src/hammurabi.o
	ar cr $@ $^

help:
	echo $(OBJ)

.PHONY: clean
clean:
	rm lib/*.a src/*.o src/grids/*.o src/fields/cre/*.o src/fields/fe/*.o src/fields/gmf/*.o src/integrators/*.o src/tools/*.o; rm -rf bin
.PHONY: tar 
tar:
	tar cfv HamX.tar.gz makefile* include src
# END
