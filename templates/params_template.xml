<?xml version="1.0"?>
<!-- FULL HAMMURABI PARAMETER SET -->
<!-- DO NOT USE UPPERCASE, EXCEPT ENERGY -->
<!-- elements marked with (optional) are optional -->
<!-- elements marked with (default) have default settings -->
<root>
    <!-- observable output -->
    <!-- frequency @ GHz -->
    <observable>
        <dm cue="1" filename="dm.fits" nside="8"/> <!-- Dispersion Measure (optional) -->
        <faraday cue="1" filename="fd.fits" nside="64"/> <!-- Faraday depth (optional) -->
        <sync cue="1" freq="23" filename="sync_23.fits" nside="16"/> <!-- synchrotron dmission (optional) -->
        <sync cue="1" freq="1.4" filename="sync_1.4.fits" nside="32"/> <!-- synchrotron dmission (optional) -->
    </observable>
    <!-- physical field in/out -->
    <!-- resolution defined in './Grid/Box' -->
    <!-- CRE field resolution defined in './CRE/Numeric' -->
    <fieldio>
        <breg read="0" write="0" filename="breg.bin"/> <!-- regular magnetic field (optional) -->
        <brnd read="0" write="0" filename="brnd.bin"/> <!-- turbulent magnetic field (optional) -->
        <fereg read="0" write="0" filename="fereg.bin"/> <!-- free/thermal electron field (optional) -->
        <fernd read="0" write="0" filename="fernd.bin"/> <!-- turbulent free electron field (optional) -->
        <cre read="0" write="0" filename="cre.bin"/> <!-- cosmic ray electron field (optional) -->
    </fieldio>
    <!-- field & observable grid -->
    <grid>
        <!-- galactic-centric position of observer -->
        <observer>
            <x value="-8.3"/> <!-- kpc (default) -->
            <y value="0"/> <!-- kpc (default) -->
            <z value="6"/> <!-- pc (default) -->
        </observer>
        <!-- regular GMF grid -->
        <box_breg> <!-- (optional) if no breg I/O -->
            <!-- grid vertex size -->
            <nx value="800"/> <!-- (default) -->
            <ny value="800"/> <!-- (default) -->
            <nz value="160"/> <!-- (default) -->
            <!-- box limit, in galactic-centric frame -->
            <x_min value="-20.0"/> <!-- kpc (default) -->
            <x_max value="20.0"/> <!-- kpc (default) -->
            <y_min value="-20.0"/> <!-- kpc (default) -->
            <y_max value="20.0"/> <!-- kpc (default) -->
            <z_min value="-4.0"/> <!-- kpc (default) -->
            <z_max value="4.0"/> <!-- kpc (default) -->
        </box_breg>
        <!-- turbulent GMF grid -->
        <box_brnd> <!-- (optional) if no brnd I/O AND no internal brnd model -->
            <!-- grid vertex size -->
            <nx value="800"/> <!-- (default) -->
            <ny value="800"/> <!-- (default) -->
            <nz value="160"/> <!-- (default) -->
            <!-- box limit, in galactic-centric frame -->
            <x_min value="-20.0"/> <!-- kpc (default) -->
            <x_max value="20.0"/> <!-- kpc (default) -->
            <y_min value="-20.0"/> <!-- kpc (default) -->
            <y_max value="20.0"/> <!-- kpc (default) -->
            <z_min value="-4.0"/> <!-- kpc (default) -->
            <z_max value="4.0"/> <!-- kpc (default) -->
        </box_brnd>
        <!-- regular FE field grid -->
        <box_fereg> <!-- (optional) if no breg I/O -->
            <!-- grid vertex size -->
            <nx value="800"/> <!-- (default) -->
            <ny value="800"/> <!-- (default) -->
            <nz value="160"/> <!-- (default) -->
            <!-- box limit, in galactic-centric frame -->
            <x_min value="-20.0"/> <!-- kpc (default) -->
            <x_max value="20.0"/> <!-- kpc (default) -->
            <y_min value="-20.0"/> <!-- kpc (default) -->
            <y_max value="20.0"/> <!-- kpc (default) -->
            <z_min value="-4.0"/> <!-- kpc (default) -->
            <z_max value="4.0"/> <!-- kpc (default) -->
        </box_fereg>
        <!-- trubelent FE field grid -->
        <box_fernd> <!-- (optional) if no fernd I/O AND no internal fernd model -->
            <!-- grid vertex size -->
            <nx value="800"/> <!-- (default) -->
            <ny value="800"/> <!-- (default) -->
            <nz value="160"/> <!-- (default) -->
            <!-- box limit, in galactic-centric frame -->
            <x_min value="-20.0"/> <!-- kpc (default) -->
            <x_max value="20.0"/> <!-- kpc (default) -->
            <y_min value="-20.0"/> <!-- kpc (default) -->
            <y_max value="20.0"/> <!-- kpc (default) -->
            <z_min value="-4.0"/> <!-- kpc (default) -->
            <z_max value="4.0"/> <!-- kpc (default) -->
        </box_fernd>
        <!-- CRE field grid, shared by both regular and turbulent fields -->
        <box_cre> <!-- (optional) if no cre I/O -->
            <!-- grid vertex size -->
            <nz value="80"/> <!-- (default) -->
            <nx value="80"/> <!-- (default) -->
            <ny value="80"/> <!-- (default) -->
            <nE value="80"/> <!-- (default) -->
            <!-- box limit, in galactic-centric frame -->
            <x_min value="0.0"/> <!-- kpc (default) -->
            <x_max value="0.0"/> <!-- kpc (default) -->
            <y_min value="0.0"/> <!-- kpc (default) -->
            <y_max value="0.0"/> <!-- kpc (default) -->
            <z_min value="-4.0"/> <!-- kpc (default) -->
            <z_max value="4.0"/> <!-- kpc (default) -->
            <!-- E_max = E_min*exp(nE*E_fact) -->
            <E_min value="0.1"/> <!-- GeV (default) -->
            <E_max value="100.0"/> <!-- GeV (default) -->
        </box_cre>
        <!-- LoS integration helio/observer-centric spherical shell setting -->
        <shell> <!-- (optional) if nothing under observable -->
            <layer type="auto">
                <auto>
                    <shell_num value="1"/> <!-- total shell number (default) -->
                    <nside_min value="32"/> <!-- inner most shell resolution (default) -->
                </auto>
                <!-- set shell resolution from inside out -->
                <!-- set shell cutting point from inside out -->
                <manual> <!-- total shell number calculated automatically -->
                    <cut value="0.5"/> <!-- cut at half of total shell radius -->
                    <!-- list niside from inside-out -->
                    <nside value="32"/> <!-- inner most shell Nside -->
                    <nside value="16"/>
                </manual>
            </layer>
            <!-- helio/observer-centric radial limit -->
            <ec_r_min value="0.0"/> <!-- kpc (default) -->
            <ec_r_max value="30.0"/> <!-- kpc (default) -->
            <!-- galactic-centric radial limit -->
            <gc_r_min value="0.0"/> <!-- kpc (default) -->
            <gc_r_max value="20.0"/> <!-- kpc (default) -->
            <!-- galactic-centric height limit -->
            <gc_z_min value="0.0"/> <!-- kpc (default) -->
            <gc_z_max value="10.0"/> <!-- kpc (default) -->
            <!-- radial integration resolution -->
            <ec_r_res value="0.01"/> <!-- kpc (default) -->
            <!-- galactic latitude limit, both poles -->
            <lat_min value="0."/> <!--  (default) -->
            <lat_max value="90."/> <!--  (default) -->
            <!-- galactic longitude limit, both poles -->
            <lon_min value="0."/> <!--  (default) -->
            <lon_max value="360."/> <!--  (default) -->
        </shell>
    </grid>
    <!-- magnetic fields -->
    <magneticfield>
        <!-- regular fields -->
        <!-- if cue="0", all child elements are opitonal -->
        <regular cue="1" type="unif">
            <!-- WMAP LSA -->
            <wmap>
                <b0 value="1.2"/> <!-- microG -->
                <psi0 value="27.0"/> <!-- deg -->
                <psi1 value="0.9"/> <!-- deg -->
                <chi0 value="25.0"/> <!-- deg -->
            </wmap>
            <!-- Jaffe -->
            <jaffe>
                <quadruple cue="0"/> <!-- quadruple pattern in halo -->
                <bss cue="0"/> <!-- bi-symmetric -->
                
                <disk_amp value="0.167"/> <!-- disk amplitude, microG -->
                <disk_z0 value="0.1"/> <!-- disk height scale, kpc -->
                <halo_amp value="1.38"/> <!-- halo amplitude, microG -->
                <halo_z0 value="3.0"/> <!-- halo height scale, kpc -->
                <r_inner value="0.5"/> <!-- inner R scale, kpc -->
                <r_scale value="20"/> <!-- R scale, kpc -->
                <r_peak value="0"/> <!-- R peak, kpc -->
                
                <ring cue="0"/> <!-- molecular ring -->
                <bar cue="1"/> <!-- elliptical bar -->
                <!-- either ring or bar -->
                <ring_amp value="0.023"/> <!-- ring field amplitude, microG -->
                <ring_r value="5.0"/> <!-- ring radius, kpc -->
                <bar_amp value="0.023"/> <!-- bar field amplitude, microG -->
                <bar_a value="5.0"/> <!-- major scale, kpc -->
                <bar_b value="3.0"/> <!-- minor scale, kpc -->
                <bar_phi0 value="45.0"/> <!-- bar major direction -->
                
                <arm_num value="4"/> <!-- spiral arms -->
                <arm_r0 value="7.1"/> <!-- arm ref radius -->
                <arm_z0 value="0.1"/> <!-- arm heigth scale, kpc -->
                <arm_phi1 value="70"/> <!-- arm ref angles, deg -->
                <arm_phi2 value="160"/>
                <arm_phi3 value="250"/>
                <arm_phi4 value="340"/>
                <arm_amp1 value="2"/> <!-- arm field amplitudes, microG -->
                <arm_amp2 value="0.133"/>
                <arm_amp3 value="-3.78"/>
                <arm_amp4 value="0.32"/>
                <arm_pitch value="11.5"/> <!-- pitch angle, deg -->
                
                <comp_c value="0.5"/> <!-- compress factor -->
                <comp_d value="0.3"/> <!-- arm cross-sec scale, kpc -->
                <comp_r value="12"/> <!-- radial cutoff scale, kpc -->
                <comp_p value="3"/> <!-- cutoff power -->
            </jaffe>
            <!-- uniform -->
            <unif>
                <b0 value="2.0"/> <!-- microG -->
                <l0 value="70"/> <!-- deg -->
                <r value="0.3"/>
            </unif>
        </regular>
        <!-- random/turbulent fields -->
        <!-- seed should be non-negative int -->
        <!-- seed=0, generate thread-time dependent seed -->
        <!-- if cue="0", all child elements are opitonal -->
        <random cue="0" type="local" seed="0">
            <!-- global generators -->
            <global type="es">
                <!-- Ensslin-Steininger method -->
                <es>
                    <rms value="0.8"/> <!-- RMS -->
                    <k0 value="0.5"/> <!-- cutoff, 1/(Lambda in kpc) -->
                    <a0 value="1.7"/> <!-- 5/3, Kolmogorov -->
                    <rho value="0.5"/> <!-- [0,1] -->
                    <!-- energy density rescaling -->
                    <r0 value="8.0"/> <!-- in kpc -->
                    <z0 value="1.0"/> <!-- in kpc -->
                </es>
                <!-- Jaffe method -->
                <jaffe>
                    <!-- to be implemented -->
                </jaffe>
            </global>
            <!-- local generators -->
            <local type="mhd">
                <!-- compressive MHD approximation -->
                <mhd>
                    <pa0  value="1"/> <!-- Alfven power norm at k0 -->
                    <pf0 value="1"/> <!-- fast power norm at k0 -->
                    <ps0 value="1"/> <!-- slow power norm at k0 -->
                    <aa0 value="1.7"/> <!-- Kolmogorov -->
                    <af0 value="1.5"/>
                    <as0 value="1.7"/>
                    <k0 value="0.5"/> <!-- cutoff, 1/(Lambda in kpc) -->
                    <beta value="0.1"/> <!-- plasma beta -->
                    <ma value="0.5"/> <!-- Alfven Mach number -->
                </mhd>
            </local>
        </random>
    </magneticfield>
    <!-- free electron field -->
    <freeelectron>
        <!-- if cue="0", all child elements are opitonal -->
        <regular cue="1" type="unif">
            <!-- YMW16 -->
            <ymw16>
                <warp>
                    <r_warp value="8.4"/> <!-- galactic warp, kpc, (default) -->
                    <gamma_w value="0.14"/> <!-- warp ratio, (default) -->
                    <r0 value="8.3"/> <!-- Sun radial position, kpc, (default) -->
                </warp>
                <thickdisk>
                    <ad value="2500"/> <!-- (default) -->
                    <bd value="15000"/> <!-- (default) -->
                    <n1 value="0.01132"/> <!-- (default) -->
                    <h1 value="1673"/> <!-- (default) -->
                </thickdisk>
                <thindisk>
                    <a2 value="1200"/> <!-- (default) -->
                    <b2 value="4000"/> <!-- (default) -->
                    <n2 value="0.404"/> <!-- (default) -->
                    <k2 value="1.54"/> <!-- (default) -->
                </thindisk>
                <!-- using HH14 SpiralArms -->
                <spiralarm>
                    <b2s value="4000"/> <!-- (default) -->
                    <ele_arm_0 value="0.135000"/> <!-- electron density norm, cm^-3, (default) -->
                    <ele_arm_1 value="0.129000"/> <!-- electron density norm, cm^-3, (default) -->
                    <ele_arm_2 value="0.103000"/> <!-- electron density norm, cm^-3, (default) -->
                    <ele_arm_3 value="0.116000"/> <!-- electron density norm, cm^-3, (default) -->
                    <ele_arm_4 value="0.005700"/> <!-- electron density norm, cm^-3, (default) -->
                    <wid_arm_0 value="300"/> <!-- typical arm width, pc, (default) -->
                    <wid_arm_1 value="500"/> <!-- typical arm width, pc, (default) -->
                    <wid_arm_2 value="300"/> <!-- typical arm width, pc, (default) -->
                    <wid_arm_3 value="500"/> <!-- typical arm width, pc, (default) -->
                    <wid_arm_4 value="300"/> <!-- typical arm width, pc, (default) -->
                    <rref_arm_0 value="3.35"/> <!-- arm reference radius, kpc, (default) -->
                    <rref_arm_1 value="3.707"/> <!-- arm reference radius, kpc, (default) -->
                    <rref_arm_2 value="3.56"/> <!-- arm reference radius, kpc, (default) -->
                    <rref_arm_3 value="3.670"/> <!-- arm reference radius, kpc, (default) -->
                    <rref_arm_4 value="8.21"/> <!-- arm reference radius, kpc, (default) -->
                    <phiref_arm_0 value="44.4"/> <!-- arm reference azimuthal angle, deg, (default) -->
                    <phiref_arm_1 value="120.0"/> <!-- arm reference azimuthal angle, deg, (default)-->
                    <phiref_arm_2 value="218.6"/> <!-- arm reference azimuthal angle, deg, (default) -->
                    <phiref_arm_3 value="330.3"/> <!-- arm reference azimuthal angle, deg, (default) -->
                    <phiref_arm_4 value="55.1"/> <!-- arm reference azimuthal angle, deg, (default) -->
                    <pitch_arm_0 value="11.43"/> <!-- arm pitch angle, deg, (default) -->
                    <pitch_arm_1 value="9.84"/> <!-- arm pitch angle, deg, (default) -->
                    <pitch_arm_2 value="10.38"/> <!-- arm pitch angle, deg, (default) -->
                    <pitch_arm_3 value="10.54"/> <!-- arm pitch angle, deg, (default) -->
                    <pitch_arm_4 value="2.77"/> <!-- arm pitch angle, deg, (default) -->
                    <aa value="11680"/> <!-- (default) -->
                    <ka value="5.015"/> <!-- (default) -->
                    <ncn value="2.4"/> <!-- (default) -->
                    <wcn value="8.2"/> <!-- (default) -->
                    <thetacn value="109"/> <!-- (default) -->
                    <nsg value="0.626"/> <!-- (default) -->
                    <wsg value="20"/> <!-- (default) -->
                    <thetasg value="75.8"/> <!-- (default) -->
                </spiralarm>
                <galcenter>
                    <ngc value="6.2"/> <!-- (default) -->
                    <agc value="160"/> <!-- (default) -->
                    <hgc value="35"/> <!-- (default) -->
                </galcenter>
                <gumnebula>
                    <ngn value="1.84"/> <!-- (default) -->
                    <wgn value="15.1"/> <!-- (default) -->
                    <agn value="125.8"/> <!-- (default) -->
                    <kgn value="1.4"/> <!-- (default) -->
                </gumnebula>
                <localbubble>
                    <j_lb value="0.480"/> <!-- (default) -->
                    <nlb1 value="1.094"/> <!-- (default) -->
                    <detlb1 value="28.4"/> <!-- (default) -->
                    <wlb1 value="14.2"/> <!-- (default) -->
                    <hlb1 value="112.9"/> <!-- (default) -->
                    <thetalb1 value="195.4"/> <!-- (default) -->
                    <nlb2 value="2.33"/> <!-- (default) -->
                    <detlb2 value="14.7"/> <!-- (default) -->
                    <wlb2 value="15.6"/> <!-- (default) -->
                    <hlb2 value="43.6"/> <!-- (default) -->
                    <thetalb2 value="278.2"/> <!-- (default) -->
                </localbubble>
                <loopi>
                    <nli value="1.907"/> <!-- (default) -->
                    <rli value="80.0"/> <!-- (default) -->
                    <wli value="15.0"/> <!-- (default) -->
                    <detthetali value="30.0"/> <!-- (default) -->
                    <thetali value="40.0"/> <!-- (default) -->
                </loopi>
            </ymw16>
            <!-- uniform -->
            <unif>
                <n0 value="0.01"/> <!-- pccm -->
                <r0 value="3.0"/> <!-- kpc -->
            </unif>
        </regular>
        <!-- random/turbulent free electron -->
        <!-- if cue="0", all child elements are opitonal -->
        <random cue="0" type="global" seed="0">
            <!-- global generator -->
            <global type="dft">
                <!-- default global generator -->
                <dft>
                    <rms value="1.0"/>
                    <k0 value="2.0"/> <!-- cutoff 1/Lambda in kpc -->
                    <a0 value="-1.7"/>
                    <!-- field strength rescaling -->
                    <r0 value="8.0"/> <!-- in kpc -->
                    <z0 value="1.0"/> <!-- in kpc -->
                </dft>
            </global>
            <!-- local generator -->
            <local>
                <!-- to be implemented -->
            </local>
        </random>
    </freeelectron>
    <!-- analytic CRE -->
    <!-- flux norm comes with unit [GeV m^2 s Sr]^-1 -->
    <!-- if cue="0", all child elements are opitonal -->
    <cre cue="1" type="unif">
        <analytic>
            <!-- CRE spectral index: -alpha+beta*r+theta*z, Galactic cylindric frame -->
            <alpha value="3.0"/>
            <beta value="0.0"/>
            <theta value="0.0"/>
            <r0 value="5.0"/> <!-- kpc -->
            <z0 value="1.0"/> <!-- kpc -->
            <!-- by default, we choose AMS02 20.6GeV -->
            <E0 value="20.6"/> <!-- CRE kinetic energy reference, GeV, (default) -->
            <j0 value="0.0217"/> <!-- local CRE flux norm factor @ E0, (default) -->
        </analytic>
        <!-- uniform -->
        <unif>
            <alpha value="3.0"/>
            <r0 value="3.0"/> <!-- cutoff radius, kpc -->
            <!-- by default, we choose AMS02 20.6GeV -->
            <E0 value="20.6"/> <!-- CRE kinetic energy reference, GeV, (default) -->
            <j0 value="0.0217"/> <!-- local CRE flux norm factor @ E0, (default) -->
        </unif>
    </cre>
</root>
