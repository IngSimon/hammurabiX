# -*- Makefile -*-

default: hammurabi lib clean

hammurabi:
	$(MAKE) $(MFLAGS) -C mfcache default

lib:
	$(MAKE) $(MFLAGS) -C mfcache lib

doc:
	$(MAKE) $(MFLAGS) -C mfcache doc

clean:
	$(MAKE) $(MFLAGS) -C mfcache clean
	$(MAKE) $(MFLAGS) -C unitest clean

wipe:
	$(MAKE) $(MFLAGS) -C mfcache wipe
	$(MAKE) $(MFLAGS) -C unitest wipe

test:
	$(MAKE) $(MFLAGS) -C unitest default
	$(MAKE) $(MFLAGS) -C unitest clean
	$(MAKE) $(MFLAGS) -C unitest run
	$(MAKE) $(MFLAGS) -C unitest wipe

install:
	$(MAKE) $(MFLAGS) -C mfcache install
	$(MAKE) $(MFLAGS) -C mfcache wipe
	$(MAKE) $(MFLAGS) -C unitest wipe
